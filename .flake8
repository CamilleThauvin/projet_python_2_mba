[flake8]
# Configuration flake8 pour respecter PEP8

# Longueur maximale de ligne (PEP8 recommande 79, mais on autorise 100 pour plus de flexibilité)
max-line-length = 100

# Fichiers et dossiers à exclure
exclude =
    .git,
    __pycache__,
    venv,
    env,
    .venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .coverage,
    htmlcov,
    data

# Ignorer certains codes d'erreur spécifiques si nécessaire
# E203: whitespace before ':' (conflit avec black)
# W503: line break before binary operator (ancienne convention)
ignore = E203,W503

# Complexité cyclomatique maximale (McCabe)
max-complexity = 10

# Afficher les statistiques
count = True
statistics = True
show-source = True
